                            <!--  属性位  -->
                            <!--  属性位  -->


                        </StackPanel>


                    </StackPanel>

                </Grid>
                <!--  标签  -->
                <Grid Grid.Row="4" Margin="10,10">
                    <StackPanel>
                        <TextBlock Text="标签" />
                        <mycontrols:LabelsControl
                            Margin="0,4,0,0"
                            HorizontalAlignment="Left"
                            LabelClasses="{x:Bind VM.Labels, Mode=TwoWay}"
                            Mode="Add" />
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
        <ProgressRing x:Name="pr" IsActive="False" />
    </Grid>
</Page>
